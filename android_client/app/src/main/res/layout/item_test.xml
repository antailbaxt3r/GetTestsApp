<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/card_text">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:id="@+id/head_of_card">
                <TextView
                    android:id="@+id/test_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCORE-II (JA)"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/test_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OBJ"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:id="@+id/subhead_of_card"
                android:layout_below="@id/head_of_card"
                >
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 Apr 17"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Type"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:id="@+id/test_details_head"
                android:layout_below="@id/subhead_of_card"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Pattern"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum Marks"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marks Scored"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:id="@+id/test_details"
                android:layout_below="@id/test_details_head"
                >
                <TextView
                    android:id="@+id/test_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JEE(M+A)"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/max_marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="504"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="356"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>


        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_detail_btn"
            android:layout_below="@id/card_text"
            android:background="@color/light_green"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/view_details"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>